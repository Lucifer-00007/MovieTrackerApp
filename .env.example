# TMDB API Configuration
EXPO_PUBLIC_TMDB_API_KEY=your_api_key_here

# Data Source Configuration
# Set to 'true' to use mock data instead of API calls (useful for development/testing)
EXPO_PUBLIC_USE_MOCK_DATA=false

# API Provider Configuration
# Supported values: 'tmdb' (default), 'custom'
# When using 'custom', implement your adapter in services/api/adapters/
EXPO_PUBLIC_API_PROVIDER=tmdb
